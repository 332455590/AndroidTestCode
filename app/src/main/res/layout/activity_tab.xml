<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lvfq.code.tablayout.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"
        app:indicatorColor="#fff"
        app:indicatorHeight="@dimen/dp_2"
        app:indicatorPaddingLeftRight="@dimen/dp_5"
        app:tabDefTextColor="#000"
        app:tabDefTextSize="14sp"
        app:tabPaddingLeftRight="@dimen/dp_10"
        app:tabSelTextColor="#fff"
        app:tabSelTextSize="16sp"
        app:underlineColor="@color/color_red"
        app:underlineHeight="@dimen/px_1" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>